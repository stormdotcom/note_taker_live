{
  "manifest_version": 3,
  "name": "Quick Note AI",
  "version": "1.0",
  "description": "An extension for Quick Note AI that records meetings, provides summaries on the dashboard, and offers insights for meeting notes, classes, and more.",
  "host_permissions": [
    "http://localhost:8000/*",
    "https://llm-service-api-435l.onrender.com/*",
    "https://ajmalnasumudeen.in/*"
  ],
  "permissions": [ "tabs", "tabCapture", "activeTab", "background", "storage"],
  "background": {
    "service_worker": "src/background.js",
     "type": "module"
  },

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "src/assets/icon.png"
  },
  "content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'self'"
},
  "icons": {
    "16": "src/assets/icon.png",
    "48": "src/assets/icon.png",
    "128": "src/assets/icon.png"
  }
}
